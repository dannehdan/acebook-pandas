    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-fileupload": "^1.2.1",
    "express-session": "^1.17.2",
    "hbs": "^4.1.0",
    "http-errors": "~1.6.3",
    "method-override": "^3.0.0",
    "mongo": "^0.1.0",
    "mongodb": "^3.7.3",
    "mongoose": "^5.8.11",
    "morgan": "~1.9.1",
    "nanoid": "^3.1.30",
    "nodemon": "^2.0.14"
  },
  "devDependencies": {
    "cypress": "^8.7.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^7.32.0",
